<?xml version="1.0" encoding="UTF-8"?>

<sprites>
	<!-- TODO: load from files in sub-directory -->

	<sprite id="player">
		<filename index="6">character</filename>
		<size width="32" height="32" />
		<animation mode="idle" default="true">
			<frame index="6" delay="4000" />
			<frame index="7" delay="250" />
		</animation>
		<animation mode="run">
			<frame index="10" delay="100" />
			<frame index="9" delay="100" />
			<frame index="10" delay="100" />
			<frame index="11" delay="100" />
		</animation>
		<animation mode="fall">
			<frame index="0" delay="10000" />
		</animation>
	</sprite>

	<sprite id="enemy">
		<filename>enemy</filename>
		<size width="16" height="16" />
		<animation mode="idle" default="true">
			<frame index="0" delay="4000" />
			<frame index="1" delay="250" />
		</animation>
		<animation mode="run">
			<frame index="6" delay="100" />
			<frame index="7" delay="100" />
			<frame index="8" delay="100" />
			<frame index="7" delay="100" />
		</animation>
		<animation mode="fall">
			<frame index="3" delay="10000" />
		</animation>
	</sprite>

	<sprite id="flying_enemy">
		<filename>flying_enemy</filename>
		<size width="22" height="24" />
		<animation mode="idle" default="true">
			<frame index="0" delay="250" />
			<frame index="1" delay="250" />
		</animation>
	</sprite>

	<sprite id="explosion">
		<filename>explosion</filename>
		<size width="22" height="24" />
		<animation mode="main" default="true">
			<frame index="0" delay="150" />
			<frame index="1" delay="150" />
			<frame index="2" delay="150" />
		</animation>
	</sprite>

</sprites>
